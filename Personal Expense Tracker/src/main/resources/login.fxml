<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox fx:id="authRoot" alignment="CENTER" spacing="20.0" prefHeight="450.0" prefWidth="350.0"
      style="-fx-background-color: #0d1117; -fx-border-color: #30363d; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10;"
      stylesheets="@loginstyle.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.expensetracker.LoginController">

    <padding>
        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
    </padding>

    <VBox alignment="CENTER" spacing="5">
        <Label text="CoinCare" style="-fx-text-fill: #58a6ff; -fx-font-size: 32; -fx-font-weight: bold;" />
        <Text fx:id="authTitle" text="Login to your account" fill="#8b949e" />
    </VBox>

    <VBox spacing="15.0">
        <VBox spacing="5">
            <Label text="Username" style="-fx-text-fill: white;" />
            <TextField fx:id="userField" promptText="Enter username" styleClass="auth-field" />
        </VBox>

        <VBox spacing="5">
            <Label text="Email" style="-fx-text-fill: white;" />
            <TextField fx:id="emailField" promptText="Enter Email" styleClass="auth-field" />
        </VBox>

        <VBox spacing="5">
            <Label text="Password" style="-fx-text-fill: white;" />
            <PasswordField fx:id="passField" promptText="Enter password" styleClass="auth-field" />
        </VBox>

        <VBox fx:id="securityBox" spacing="5" managed="false" visible="false">
            <Label text="What is your pet's name?" style="-fx-text-fill: white;" />
            <TextField fx:id="securityField" promptText="Security Answer" styleClass="auth-field" />
        </VBox>
    </VBox>

    <VBox spacing="10.0" alignment="CENTER">
        <Button fx:id="mainAuthBtn" text="SIGN IN" onAction="#handlePrimaryAction"
                maxWidth="Infinity" styleClass="login-btn" />

        <HBox alignment="CENTER" spacing="5">
            <Hyperlink fx:id="toggleLink" text="Create an account" onAction="#toggleAuthMode"
                       style="-fx-text-fill: #58a6ff;" />
            <Label text="|" textFill="#30363d" />
            <Hyperlink text="Forgot?" onAction="#handleForgot" style="-fx-text-fill: #8b949e;" />
        </HBox>
        <Separator opacity="0.2" maxWidth="200" />

        <Button text="Export Users (CSV)" onAction="#handleUserExport"
                style="-fx-background-color: transparent; -fx-text-fill: #8b949e; -fx-border-color: #30363d; -fx-border-radius: 5; -fx-cursor: hand;" />
    </VBox>

    <Label fx:id="statusLabel" text="" style="-fx-text-fill: #f85149;" />

</VBox>